- content_for :head do
  = render partial: 'layouts/opengraph', locals: { title: t('modtalk_name'), url: root_url }
= render partial: 'header'
.callout.lighthouse
  .img-lighthouse
.container
  = render partial: 'blog_post', collection: @rss.items.first(3), as: :post
  .blog-post
    %h2= link_to 'Read more on our blog', blog_path, class: 'action-link'