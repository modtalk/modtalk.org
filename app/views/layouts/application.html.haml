!!!
%html{ prefix: 'og: http://ogp.me/ns#' }
  %head
    %title<
      - if content_for? :page_title
        = content_for :page_title
      - else
        = t 'modtalk_name'
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge,chrome=1', http: { equiv: 'X-UA-Compatible' } }
    %meta{ content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0', name: 'viewport' }
    %meta{ content: 'Modtalk.org', property: 'apple-mobile-web-app-title' }
    %meta{ content: 'https://www.modtalk.org', name: 'canonical' }
    - if content_for? :head
      = yield :head
    %link{ href: image_url('modtalk_logo-144px.png'), rel: 'apple-touch-icon', size: '144x144' }
    = stylesheet_link_tag 'application', media: :screen, async: true, data: { turbolinks_track: true }
    = javascript_include_tag 'application.js', async: true, defer: true, data: { turbolinks_track: true }
  %body
    = render partial: 'layouts/navigation'
    = yield
    = render partial: 'layouts/footer'
